{
    "name": "mindforce/cakephp-editorial-codemirror",
    "description": "Editorial Codemirror editor plugin for CakePHP",
	"homepage": "http://mindforce.me",
	"keywords": ["cakephp", "ui", "editor", "Codemirror"],
	"type": "cakephp-plugin",
	"license": "MIT",
	"authors": [
		{
			"name": "Denys Kyselov",
			"homepage": "https://mindforce.me"
		}
	],
	"support": {
		"issues": "https://github.com/mindforce/cakephp-editorial-codemirror/issues",
		"source": "https://github.com/mindforce/cakephp-editorial-codemirror"
	},
	"minimum-stability": "dev",
    "require": {
        "php": ">=5.4",
        "cakephp/plugin-installer": "*",
        "cakephp/cakephp": "3.0.*",
        "mindforce/cakephp-editorial": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "*"
    },
    "autoload": {
        "psr-4": {
            "Editorial\\Codemirror\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Editorial\\Codemirror\\Test\\": "tests",
            "Cake\\Test\\": "./vendor/cakephp/cakephp/tests"
        }
    }
}
